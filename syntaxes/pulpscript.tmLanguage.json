{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "PulpScript",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#decrement"
		},
		{
			"include": "#increment"
		},
		{
			"include": "#comparisons"
		},
		{
			"include": "#augmented-assignments"
		},
		{
			"include": "#assignment"
		},
		{
			"include": "#numeric"
		},
		{
			"include": "#spaces"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#built-in-events"
		},
		{
			"include": "#controls"
		},
		{
			"include": "#colons"
		},
		{
			"include": "#commas"
		},
		{
			"include": "#event"
		},
		{
			"include": "#config"
		},
		{
			"include": "#datetime"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.pulpscript",
					"match": "//.*"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.pulpscript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"begin": "{",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.template-expression.begin.pulpscript"
						}
					},
					"end": "}",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.template-expression.end.pulpscript"
						}
					},
					"patterns": [
						{
							"include": "#spaces"
						},
						{
							"include": "#numeric"
						},
						{
							"include": "#functions"
						},
						{
							"include": "#config"
						},
						{
							"include": "#event"
						},
						{
							"include": "#commas"
						},
						{
							"include": "#colons"
						},
						{
							"include": "#accessor"
						},
						{
							"name": "variable.pulpscript",
							"match": "(.)"
						}
					]
				}
			]
		},
		"decrement": {
			"patterns": [
				{
					"name": "keyword.operator.decrement.pulpscript",
					"match": "--"
				}
			]
		},
		"increment": {
			"name": "keyword.operator.increment.pulpscript",
			"patterns": [
				{
					"name": "keyword.operator.increment.pulpscript",
					"match": "\\+\\+"
				}
			]
		},
		"comparisons": {
			"begin": "(if|elseif) (\\w*)( )?",
			"beginCaptures": {
				"0": {
					"name": "text.pulpscript"
				},
				"1": {
					"name": "keyword.control.pulpscript"
				},
				"2": {
					"name": "variable.pulpscript"
				}
			},
			"end": "( )?[0-9]*(\\w*)\\b (then)",
			"endCaptures": {
				"0": {
					"name": "constant.numeric.pulpscript"
				},
				"1": {
					"name": "keyword.control.pulpscript"
				},
				"2": {
					"name": "variable.pulpscript"
				},
				"3": {
					"name": "keyword.control.pulpscript"
				}
			},
			"patterns": [
				{
					"name": "keyword.operator.comparison.pulpscript",
					"match": "(==|<=|>=)"
				}
			]
		},
		"augmented-assignments": {
			"patterns": [
				{
					"name": "keyword.operator.assignment.augmented.pulpscript",
					"match": "(-=|\\+=|\\*=|\/=)"
				}
			]
		},
		"assignment": {
			"patterns": [
				{
					"name": "keyword.operator.assignment.pulpscript",
					"match": "="
				}
			]
		},
		"numeric": {
			"patterns": [
				{
					"name": "constant.numeric.pulpscript",
					"match": "[^_][0-9]"
				}
			]
		},
		"spaces": {
			"patterns": [
				{
					"name": "text.pulpscript",
					"match": " "
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "support.function.pulpscript",
					"match": "\\b(log|dump|say|fin|swap|frame|play|wait|shake|tell|to|call|emit|mimic|ignore|listen|act|draw|hide|window|label(:( )?)?|fill|crop|goto|sound|stop|loop|bpm|store|restore|toss|random|floor|ceil|round|sine|cosine|tangent|radians|degrees|invert|solid|type|id|name|embed:( )?)\\b"
				}
			]
		},
		"built-in-events": {
			"begin": "\\b(on)\\b( )",
			"beginCaptures": {
				"0": {
					"name": "text.pulpscript"
				},
				"1": {
					"name": "keyword.control.pulpscript"
				}
			},
			"end": "( )(do)",
			"endCaptures": {
				"0": {
					"name": "keyword.control.pulpscript"
				},
				"1": {
					"name": "text.pulpscript"
				}
			},
			"patterns": [
				{
					"name": "constant.language.pulpscript",
					"match": "\\b(load|start|enter|exit|finish|update|bump|loop|draw|confirm|cancel|crank|dock|undock|draw|interact|collect|change|select|dismiss|invalid|any)\\b"
				},
				{
					"name": "variable.pulpscript",
					"match": "(\\w)*"
				}
			]
		},
		"controls": {
			"patterns": [
				{
					"name": "keyword.control.pulpscript",
					"match": "\\b(if|then|on|while|do|else|elseif|end|menu|ask|option|once|at)\\b"
				}
			]
		},
		"colons": {
			"patterns": [
				{
					"name": "punctuation.definition.constant.pulpscript",
					"match": ":"
				}
			]
		},
		"commas": {
			"patterns": [
				{
					"name": "punctuation.separator.comma.pulpscript",
					"match": ","
				}
			]
		},
		"event": {
			"patterns": [
				{
					"include": "#accessor"
				},
				{
					"patterns": [
						{
							"name": "variable.other.property.pulpscript",
							"match": "\\b(x|y|dx|dy|tx|ty|px|py|aa|ra|ax|ay|az|game|room)\\b"
						}
					]
				},
				{
					"name": "variable.language.pulpscript",
					"match": "\\bevent\\b"
				}
			]
		},
		"config": {
			"patterns": [
				{
					"include": "#accessor"
				},
				{
					"patterns": [
						{
							"name": "variable.other.property.pulpscript",
							"match": "(autoAct|inputRepeatDelay|inputRepeatBetween|followCenterX|followCenterY|followOverflowTile|allowDismissRootMenu|sayAdvanceDelay|textSpeed|textSkip|follow|inputRepeat)\\b"
						}
					]
				},
				{
					"name": "variable.language.pulpscript",
					"match": "\\bconfig\\b"
				}
			]
		},
		"datetime": {
			"patterns": [
				{
					"include": "#accessor"
				},
				{
					"patterns": [
						{
							"name": "variable.other.property.pulpscript",
							"match": "\\b(year|year99|month|day|weekday|hour|hour12|minute|second|ampm|timestamp)\\b"
						}
					]
				},
				{
					"name": "variable.language.pulpscript",
					"match": "\\bdatetime\\b"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.pulpscript",
					"match": "(.)"
				}
			]
		},
		"accessor": {
			"patterns": [
				{
					"name": "punctuation.accessor.pulpscript",
					"match": "\\b(\\.)\\b"
				}
			]
		}
	},
	"scopeName": "text.pulpscript"
}
